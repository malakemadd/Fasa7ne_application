<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:scrollbars="none"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="636dp"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="401dp"
                android:layout_height="239dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:layout_marginEnd="0dp"
                app:srcCompat="@drawable/sufi_bookstore_inside_credits_sufi_bookstore_facebook" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/imageView"
                android:text="Sufi bookstore"
                android:textColor="@color/purple_700"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_below="@id/textView3"
                android:text="Want to escape the hectic life of the city and relax for a while? This is what Sufi Bookstore is all about. Located in the heart of cairo, Zamalek.Its cozy, homely cultural place where you can enjoy a cup of coffee and a snack with a good read from our used/ rare interesting books in different fields."
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"

                android:layout_marginTop="10dp"
                android:text="Address:12 Sayed El Bakry Street, Zamalek, Cairo, Egypt."
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:text="Category:Cafe,bookstore"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView7"
                android:layout_marginTop="10dp"

                android:text="Rating:4.3⭐"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView8"
                android:layout_marginTop="10dp"
                android:text="Number:02-2738-1643"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="191dp"

                android:layout_alignParentRight="true"
                android:layout_below="@id/textView4"
                app:srcCompat="@drawable/sufi" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="74dp"
                android:layout_height="78dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="315dp"
                android:layout_marginBottom="99dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="170dp"
                android:layout_marginBottom="770dp"
                android:text="Mahmoud Nael"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="656dp"
                android:text="A nice cafe-bookstore-exhibition frequented by young students and cultured visitors. If you are in the area drop in for a relaxed break."
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="84dp"
                android:layout_height="68dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="298dp"
                android:layout_marginBottom="577dp"
                app:srcCompat="@drawable/_14ae249_0f31_4cab_bb2b_efdff385273b" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="190dp"
                android:layout_marginBottom="614dp"
                android:text="Malak Emad"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="382dp"
                android:layout_height="323dp"
                android:layout_above="@+id/imageView6"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="65dp"
                android:text="Sufi is one of those Zamalek treasures, which has a character all its own. Even when it is crowded, which it usually is at night, it still retains it's signature chill vibe. While not the best place for a meal, it's a good place to read, work or study. I wouldn't recommend it for a family gathering or a dinner with a large group of friends, but if you're looking for a place to have some quality time with a couple of friends or by yourself then this would be the right place for you."
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="243dp"
                android:layout_height="52dp"
                android:layout_above="@+id/imageView6"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="180dp"
                android:layout_marginBottom="642dp"
                android:text="Reviews"
                android:textSize="30dp"
                android:textStyle="bold" />


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_above="@+id/textView12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="129dp"
                android:background="@color/black">

            </View>

            <ImageView
                android:id="@+id/imageView99"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="302dp"
                android:layout_marginBottom="740dp"
                app:srcCompat="@drawable/_14ae249_0f31_4cab_bb2b_efdff385273b" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="118dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="170dp"
                android:layout_marginBottom="149dp"
                android:text="Amr(You)"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="68dp"
                android:layout_height="56dp"
                android:layout_alignBottom="@+id/imageView6"
                android:layout_marginBottom="36dp"
                app:srcCompat="@drawable/_14ae249_0f31_4cab_bb2b_efdff385273b" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="86dp"
                android:hint="Please tell us your opinion">

            </EditText>

            <View
                android:id="@+id/divider2"
                android:layout_width="80dp"
                android:layout_height="5dp"
                android:layout_alignBottom="@+id/textView14"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="575dp"
                android:background="@color/purple_200" />

            <View
                android:id="@+id/divider4"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_above="@+id/textView15"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="136dp"
                android:layout_marginBottom="35dp"
                android:background="@color/teal_700" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et1"

                android:layout_alignRight="@id/et1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="26dp"
                android:text="Submit" />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>